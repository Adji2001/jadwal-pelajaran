<div class="jadwal">
	
	<h1 class="text-center text-primary textHeading animate__animated animate__backInLeft">HARI <span id="hari">JUM'AT</span></h1>

	<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
		<symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
		    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
		</symbol>
	</svg>

	<div class="row rowCard">
		<div class="col-md-6">
			
				<div class="main-container">
					<% if(lesson.length < 1) { %>
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
						  <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#info-fill"/></svg>
						  Jadwal Pelajaran Tidak Ada
						</div>
					<% } else { %>		
				    	<% lesson.forEach((less) => { %>
						<div class="cards">
						    <div class="card card-3 cardMore">
						      <h3 class="card__title">Jadwal Pelajaran</h3>
						      <div class="card__body">
							      <ol>
							      	<% less.lessons.forEach((jdw) => { %>
							      	<li><%= jdw %></li>
							      	<% }) %>
							      </ol>
						      </div>
						      <p class="card__apply">
						        <a class="card__link" href="pelajaran">See More <i class="fas fa-arrow-right"></i></a>
						      </p>
						    </div>
						</div>
						<% }) %>
					 <% } %>
				</div>
		</div>

		<div class="col-md-6">
			<div class="main-container">
				<% if(picket.length < 1) { %>
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
					  <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#info-fill"/></svg>
					  Jadwal Piket Tidak Ada
					</div>
				<% } else { %>		
			      <% picket.forEach((pick) => { %>
					<div class="cards">
						<div class="card card-5 cardMore">
					      <h3 class="card__title">Jadwal Piket</h3>
					      <div class="card__body2">
						      <ol>
						      	<% pick.schedule.forEach((jdw) => { %>
						      	<li><%= jdw %></li>
						      	<% }) %>
						      </ol>
					      </div>
					      <p class="card__apply">
					        <a class="card__link" href="piket">See More <i class="fas fa-arrow-right"></i></a>
					      </p>
					    </div>
					</div>
					<% }) %>
		    	<% } %>
			</div>
		</div>
	</div>


	<div class="jwd"></div>
</div>

<!-- animated backgrounds -->
<div class="area" >
            <ul class="circles">
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
            </ul>
    </div >


<script type="text/javascript">
	const days = ['Senin', 'Selasa', 'Rabu', 'Kamis', "Jum'at", 'Sabtu', 'Minggu'];
	const newDay = new Date().getDay();
	const thisDay = days[newDay - 1];
	const hari = document.getElementById('hari');

	hari.innerText = thisDay.toUpperCase();
</script>